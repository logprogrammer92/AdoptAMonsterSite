@model IEnumerable<AdoptAMonsterSite.Models.Monster>

@{
    ViewData["Title"] = "Index";
}

<h1>Monster Listing</h1>

@if (User?.IsInRole("Admin") ?? false)
{
    <p>
        <a asp-action="Create" asp-controller="Monsters" class="btn btn-secondary">
            Create Monster
        </a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdoptionFee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdoptionFee)
            </td>
            <td>
                @if (User?.IsInRole("Admin") ?? false)
                {
                    <text><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | </text>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (User?.IsInRole("Admin") ?? false)
                {
                    <text> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></text>
                }
            </td>
        </tr>
}
    </tbody>
</table>
