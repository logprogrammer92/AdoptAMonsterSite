@model AdoptAMonsterSite.Models.Monster

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Monster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdoptionFee" class="control-label"></label>
                <input asp-for="AdoptionFee" class="form-control" />
                <span asp-validation-for="AdoptionFee" class="text-danger"></span>
            </div>

            <!-- File upload form group added -->
            <div class="form-group">
                <label for="ImageFile" class="control-label">Image</label>
                <input type="file" id="ImageFile" name="ImageFile" class="form-control-file" accept="image/*" />
                <small class="form-text text-muted">Optional. Upload an image file (jpg, png, gif).</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
