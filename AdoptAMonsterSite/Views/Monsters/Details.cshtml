@model AdoptAMonsterSite.Models.Monster

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Monster</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdoptionFee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdoptionFee)
        </dd>
    </dl>
</div>
<div>
     @if (User.Identity?.IsAuthenticated ?? false)
    {
        <text><a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> | </text>
    }
    
    <a asp-action="Index">Back to List</a>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        // If nobody has adopted the monster, show Adopt link
        if (Model.ApplicationUser == null)
        {
            <text> | <a asp-action="Adopt" asp-route-id="@Model?.Id" onclick="return confirm('Are you sure you want to adopt this monster?');">Adopt Monster</a></text>
        }
        else
        {
            // Safe access to UserName because ApplicationUser is not null here
            var ownerName = Model.ApplicationUser?.UserName;
            if (!string.Equals(ownerName, User.Identity?.Name, StringComparison.OrdinalIgnoreCase))
            {
                <text> | <span>This monster is already adopted.</span></text>
            }
            else
            {
                <text> | <a asp-action="Abandon" asp-route-id="@Model?.Id" onclick="return confirm('Are you sure you want to abandon this monster? This action cannot be undone but you can always re-adopt this monster if no one has adopted it yet.');">Abandon Monster</a></text>
            }
        }
    }
</div>
